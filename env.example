# Backend Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=dragonlost_user
DB_PASSWORD=your_password_here
DB_NAME=dragonlost_web

# Rust Database Configuration (read-only)
RUST_DB_HOST=localhost
RUST_DB_PORT=3306
RUST_DB_USER=rust_readonly_user
RUST_DB_PASSWORD=rust_password_here
RUST_DB_NAME=rust

# Steam API Configuration
# Получите ключ на: https://steamcommunity.com/dev/apikey
STEAM_API_KEY=your_steam_api_key_here
STEAM_RETURN_URL=http://localhost:5000/api/auth/steam/return
STEAM_REALM=http://localhost:5000

# Session Configuration
# Сгенерируйте случайную строку: openssl rand -base64 32
SESSION_SECRET=your_session_secret_here_min_32_characters

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rust-Servers.net API Configuration
# API ключ для получения данных о сервере
RUST_SERVERS_API_KEY=your_rust_servers_api_key_here

# Frontend Configuration (для frontend/.env)
VITE_API_URL=http://localhost:5000/api
